@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Edit</h1>

<h3><strong>Edit this engineer:</strong> @Html.DisplayFor(model => model.Name)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.LabelFor(model => model.Name, "Engineer Name:" )
  @Html.EditorFor(model => model.Name)
<br>
  @Html.LabelFor(model => model.HireDate, "Hire Date:")
  @Html.EditorFor(model => model.HireDate)
<br>
  <button type="submit" class="btn btn-success">Save edit</button>
}